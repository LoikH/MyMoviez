<h1><%=@title%></h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>


<p>Pas encore inscrit ? <%= link_to "S'inscrire !", signup_path %></p>